\end_layout

\begin_layout Standard
\begin_inset Formula \[
|x^{2}-8|=\begin{cases}
x^{2}-8 & -4\leq x<-2\sqrt{2}\\
8-x^{2} & -2\sqrt{2}\leq x<2\sqrt{2}\\
